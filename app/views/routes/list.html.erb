<h1>Маршруты</h1>
<table>
  <tr>
    <th>Перевозчик</th>
    <th>Номер</th>
    <th>Вид транспорта</th>
    <th>Маршрут следования</th>
  </tr>
  <% for item in @routes %>
  <tr>
    <td><%= item.provider.company_name %></td>
    <td><%= item.number %></td>
    <td><%= get_kind(item.transport) %></td>
    <td><%= arr_and_dep(item.id, 'city') %></td>
    <td><%= button_to 'Редактировать информацию', :action => 'edit', :id => item.id %></td>
    <td><%= button_to 'Просмотр маршрута', :action => 'view', :id => item.id %></td>
    <td><%= button_to 'Удалить из базы', :action => 'destroy', :id => item.id %></td>
  </tr>
  <% end %>
</table>
<p><%= link_to 'Добавить маршрут', :action => 'add' %></p>
<p><%= link_to 'На главную', :controller => 'main' %></p>
