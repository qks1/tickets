<h1>Места в автобусе <%= @route.number %> на <%= date_format(@date.date) %></h1>
<% if @places.size > 0 %>
  <p>Всего мест: <%= @places.size %></p>
  <%= button_to 'Редактировать цены', :action => 'edit_prices', :date => @date.id, :route => @route.id %>
<% else %>
  <%= button_to 'Указать модель автобуса', :action => 'add_bus', :date => @date.id, :route => @route.id %>
<% end %>
<table>
    <tr>
      <th>Места</th>
    </tr>
    <tr>
      <td><%= get_single_category_places(@places) %></td>
      <td><%= button_to 'Список мест', :action => 'view_unit_places', :kind => "в автобусе #{@route.number}", :date => @date.id, :route => @route.id %></td>
    </tr>
</table>
<%= link_to 'Назад', :action => 'view', :id => @route.id %><br />
<%= link_to 'К списку маршрутов', :action => 'list' %><br />
<%= link_to 'На главную', :controller => 'main' %>
