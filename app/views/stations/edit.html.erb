<h1>Редактирование информации о станции</h1>
<table>
  <% form_tag :action => 'edit_commit' do %>
  <%= hidden_field_tag('station[id]', @item.id)  %>
  <tr><td><h4>Название станции:</h4></td>
      <td><%= text_field_tag('station[name]', "#{@item.name}", :size => 32) %></td>
  </tr>
  <tr><td><h4>Населённый пункт:</h4></td>
      <td><%= text_field_tag ('station[city]', "#{@item.city}", :size => 32) %></td>
  </tr>
  <tr><td><h4>Вид транспорта:</h4></td>
      <td><%= kinds_list('station[transport]', @item.transport) %></td>
  </tr>
  <tr><td><%= submit_tag 'Сохранить изменения' %></td>
  <% end %>
      <td><%= button_to 'Отмена', :action => 'list' %></td>
  </tr>
</table>
