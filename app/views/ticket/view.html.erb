<h1>Маршрут № <%= @item.number %></h1>
<table>
  <tr>
    <th>Станция</th>
    <th>Прибытие</th>
    <th>Отправление</th>
  </tr>
  <% for st in @stations %>
  <tr>
    <td><%= st.station.name %></td>
    <td><%= time_to_string(st.arr_day, st.arr_hour.to_s, st.arr_minute.to_s) %></td>
    <td><%= time_to_string(st.dep_day, st.dep_hour.to_s, st.dep_minute.to_s) %></td>
  </tr>
  <% end %>
</table>
<%= button_to 'Назад', :action => 'list_route', :ticket => {:transports => @transports, :city_station_trucking => @city_trucking, :city_station_arrival => @city_arrival} %>
